{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "NodeNext",
        "target": "es5",
        "lib": [
            "es2015",
            "es2015.promise",
            "esnext.asynciterable",
            "DOM",
            "es2017"
        ],
        "allowJs": true,
        "maxNodeModuleJsDepth": 10,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@my-foods2/crypt": ["libs/crypt/src/index.ts"],
            "@my-foods2/interfaces": ["libs/interfaces/src/index.ts"],
            "@my-foods2/logging": ["libs/logging/src/index.ts"],
            "@my-foods2/mongodb": ["libs/mongodb/src/index.ts"],
            "@my-foods2/products-data-client": [
                "libs/products-data-client/src/index.ts"
            ],
            "@my-foods2/rabbitmq": ["libs/rabbitmq/src/index.ts"],
            "@my-foods2/utils/utils": ["libs/utils/utils/src/index.ts"],
            "@my-foods2/variables": ["libs/variables/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "**/__test__/*", "tmp"]
}
