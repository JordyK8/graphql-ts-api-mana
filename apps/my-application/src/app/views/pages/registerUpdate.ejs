<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body id="body">

<header>
    <%- include('../partials/header', {title:'Reset Password'}); %>
</header>

<main>
    <div class="container border-black my-4 p-4 h-85vh text-center">
    <h1>Update user information</h1>
    <form action="<%= url %>/api/user/register/update?id=<%= id %>&token=<%= token %>" method="post">
        <input placeholder="first name" type="text" name="firstName" id="firstName">
        <input placeholder="last name" type="text" name="lastName" id="lastName">
        <input placeholder="phone number" type="phone" name="phone" id="phone">
        <input placeholder="language" type="text" name="language" id="language">
        <input type="password" name="password" id="password">
        <input type="submit" value="submit">
    </form>
    </div>
</main>
